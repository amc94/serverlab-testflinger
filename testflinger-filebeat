# FROM docker.elastic.co/beats/filebeat:7.9.2
FROM prima/filebeat:6

COPY ./elk/filebeat.yml /opt/filebeat.yml
COPY ./elk/fields.yml /opt/fields.yml

RUN chown root /opt/filebeat.yml \
  && chown root /opt/fields.yml \
  && chmod go-w /opt/filebeat.yml \
  && chmod go-w /opt/fields.yml

# RUN filebeat -c /opt/filebeat.yml modules enable system redis elasticsearch