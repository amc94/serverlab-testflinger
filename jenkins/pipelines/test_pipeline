set +e
cat > job.yaml <<EOF
job_queue: kies
provision_data:
  distro: focal
test_data:
  test_cmds: |
    ssh -o StrictHostKeyChecking=no ubuntu@$DEVICE_IP ifconfig
EOF
#This assumes you already have testflinger-cli installed on your jenkins agent
JOB_ID=$(testflinger-cli submit -q job.yaml)
echo "JOB_ID: ${JOB_ID}"
testflinger-cli poll ${JOB_ID}
testflinger-cli artifacts ${JOB_ID}
tar -xzf artifacts.tgz
TEST_STATUS=$(testflinger-cli results ${{JOB_ID}} |jq -r .test_status)
echo "Test exit status: ${TEST_STATUS}"